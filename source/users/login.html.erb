---
title: Login
---

<form class="error">
  <div class="error">
    <%= fa_icon_text "close",  "Usuário ou senha inválidos." %>
  </div>

  <fieldset class="inputs">
    <ol>
      <li>
        <label for="email">Digite o E-mail cadastrado</label>
        <input type="email" id="email" />
        <%= fa_icon_text "exclamation-triangle", "Email não cadastrado", "inline-error" %>
      </li>

      <li>
        <label for="password">Senha</label>
        <input type="password" id="password" />
        <%= fa_icon_text "exclamation-triangle", "Password inválido", "inline-error" %>
      </li>
    </ol>
  </fieldset>

  <fieldset class="actions">
    <ol>
      <li><button type="submit">Entrar</button></li>
      <li><%= link_to "Esqueceu a senha?", "forget-password" %></li>
    </ol>
  </fieldset>
</form>

<% content_for :users_footer do %>
  <div class="footer">
    <p>Não tem conta? <%= link_to "Cadastre-se", "register" %></p>
  </div>
<% end %>
