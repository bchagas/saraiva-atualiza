          <%= link_to item, "/#{item.downcase.parameterize}.html" %>
          <ul>
            <% %w(INFOGRÁFICOS TROCANDO\ IDÉIA NUVEM\ TECH TODA\ MIDIA ENCARE\ ESSA DIÁLOGO\ COM\ A\ ARTE SEM\ LIMITES BACKUP).each do |sub_item| %>
